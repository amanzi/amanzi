TITLE
Batch chemistry equilibrium surface complexation based on Steefel's CrunchFlow Short Course Exercise 4 - CrunchFlow
END

RUNTIME
time_units           years
timestep_max    1.0d0
timestep_init      1.0d-10
time_tolerance   0.01
coordinate          rectangular
correction_max  1.0
debye-huckel     true
database            surface-complexation.dbs
master                H+
speciate_only     false
database_sweep  false
screen_output      1
hindmarsh            false
gimrt                    false
graphics               tecplot
RunIsothermal     true
!!lag_activity       false
END

OUTPUT
time_units               years
spatial_profile          10 20 30 40 50
!time_series                surface-complexation-cc.out  1 1 1 
!time_series_print       pH  Cl- Na+  NO3-  Zn++
!time_series_interval  1
END

PRIMARY_SPECIES
H+
Na+
NO3-
Zn++
Cl-
END

SECONDARY_SPECIES 
OH-
Zn(OH)2(aq)
Zn(OH)3-
Zn(OH)4--
ZnOH+
END

MINERALS
Halite             -label default    -rate  -40.0
END
 
SURFACE_COMPLEXATION
>FeOH_w    on Halite -no_edl
>FeOH_s    on Halite -no_edl
END
 
Condition initial
units                  mol/kg
temperature      25.0
!equilibrate_surface
SolidDensity     2700.0 
pH                      5.0
Na+                   charge
NO3-                  1.00293346236581d-01
Zn++                1.00293346236581E-07
Cl-                      1.0d-20
!Site name     <site density mol/m**2> multiplied by 1 m2/m3 surface area, i.e. equiv. to mol/m3  
>FeOH_w          7.6355d-2
>FeOH_s           1.908d-3
Halite                1.0d-5   bulk_surface_area 1.0 
END

Condition west
units                  mol/kg
temperature      25.0
!equilibrate_surface
pH                      6.0
Na+                   charge
NO3-                  1.00293346236581d-01
Zn++                 1.00293346236581E-06
Cl-                      1.0d-20
>FeOH_w          7.6355d-2
>FeOH_s           1.908d-3
Halite                1.0d-5   bulk_surface_area 1.0 
END

Condition east
units                  mol/kg
temperature      25.0
!equilibrate_surface
pH                      6.0
Na+                   charge
NO3-                  1.00293346236581d-01
Zn++                1.00293346236581E-07
Cl-                      1.0d-20
>FeOH_w          7.6355d-2
>FeOH_s           1.908d-3
Halite                1.0d-5   bulk_surface_area 1.0 
END

POROSITY
fix_porosity     0.25
porosity_update  false
END
 
TEMPERATURE
set_temperature  25.0
RunIsothermal   true
END

DISCRETIZATION
distance_units  meters
xzones 100      1.0
END

INITIAL_CONDITIONS
initial     1-100
END

BOUNDARY_CONDITIONS
X_begin   west     Flux
X_end     initial  Flux
END

FLOW
time_units      seconds
distance_units  meters 
constant_flow   7.9274479960d-9  ! m/s
END

TRANSPORT
distance_units meters
time_units     second
fix_diffusion  1.E-09 ! m2/s
formation_factor  1.0  
cementation_exponent  1.0
dispersivity  0.0 0.0
END