!:Description: 1-d fixed velocity flow w/ ion exchange

!:=========================== chemistry ========================================
CHEMISTRY
  PRIMARY_SPECIES
    Na+
    Ca++
    Mg++
    Cl-
  /

  SORPTION
    ION_EXCHANGE_RXN
      CEC 750. eq/m^3
      CATIONS
        Na+   1.  REFERENCE
        Ca++  0.2953  ! 1.84
        Mg++  0.1666  ! 2.45
      /
    /
  /

  DATABASE ./ion-exchange.dat
  LOG_FORMULATION
  ACTIVITY_COEFFICIENTS OFF
  OUTPUT
    ALL
    TOTAL
    TOTAL_SORBED
  /
END

!:=========================== solver options ===================================
TIMESTEPPER
  TS_ACCELERATION 8
/

!:=========================== discretization ===================================
GRID
  TYPE structured
  ORIGIN 0.d0 0.d0 0.d0
  NXYZ 100 1 1
  BOUNDS
    0.d0    0.d0  0.0d0 
    100.d0  1.d0  1.d0   
  /
END

!:=========================== flow =============================================
UNIFORM_VELOCITY 7.9274479960d-9 0.d0 0.d0

!:=========================== fluid properties =================================
FLUID_PROPERTY 
  DIFFUSION_COEFFICIENT 1.d-9
/

!:=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  POROSITY 0.25d0
/

!:=========================== observation points ===============================
OBSERVATION
  REGION all
  AT_CELL_CENTER
/

!:=========================== output options ===================================
OUTPUT
  FORMAT TECPLOT POINT
  PERIODIC TIME 1 y
/

!:=========================== times ============================================
TIME
  FINAL_TIME 50.d0 y
  INITIAL_TIMESTEP_SIZE 1.d-6 y
  MAXIMUM_TIMESTEP_SIZE 1.d-1 y
/

!:=========================== regions ==========================================
REGION all
  COORDINATES
    0.d0 0.d0 0.d0
    100.d0 1.d0 1.d0
  /
END

REGION west
  FACE WEST
  COORDINATES
    0.d0 0.d0 0.d0
    0.d0 1.d0 1.d0
  /
END

REGION east
  FACE EAST
  COORDINATES
    100.d0 0.d0 0.d0
    100.d0 1.d0 1.d0
  /
END

!:=========================== transport conditions =============================
TRANSPORT_CONDITION initial
  TYPE dirichlet
  CONSTRAINT_LIST
    0.d0 initial
  /
END

TRANSPORT_CONDITION west
  TYPE dirichlet
  CONSTRAINT_LIST
    0.d0 west
  /
END

TRANSPORT_CONDITION east
  TYPE dirichlet_zero_gradient
  CONSTRAINT_LIST
    0.d0 west
  /
END

!:=========================== constraints ======================================
CONSTRAINT initial
  CONCENTRATIONS
    Na+     8.65d-2 T
    Ca++    1.82d-2 T
    Mg++    1.11d-2 T
    Cl-     2.d-3   Z
  /
END

CONSTRAINT west
  CONCENTRATIONS
    Na+     9.4d-3  T
    Ca++    5.d-4   T 
    Mg++    2.13d-3 T
    Cl-     1.d-2  Z
  /
END

CONSTRAINT east
  CONCENTRATIONS
    Na+     8.65d-2 T
    Ca++    1.82d-2 T
    Mg++    1.11d-2 T
    Cl-     2.d-3   Z
  /
END

!:=========================== condition couplers ===============================
!: initial condition
INITIAL_CONDITION
  TRANSPORT_CONDITION initial
  REGION all
END

!: west boundary condition
BOUNDARY_CONDITION
  TRANSPORT_CONDITION west
  REGION west
END

!: east boundary condition
BOUNDARY_CONDITION
  TRANSPORT_CONDITION east
  REGION east
END

!:=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL soil1
END


