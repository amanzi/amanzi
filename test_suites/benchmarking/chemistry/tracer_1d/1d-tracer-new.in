!:Description: 1-d fixed velocity flow w/ tracer advection

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
       MODE RICHARDS
    /
    SUBSURFACE_TRANSPORT transport 
       GLOBAL_IMPLICIT
    /
  /
END

SUBSURFACE

!:=========================== chemistry ========================================
CHEMISTRY
  PRIMARY_SPECIES
    Tracer
  /
  DATABASE ./tracer.dat
  LOG_FORMULATION
  ACTIVITY_COEFFICIENTS TIMESTEP
  USE_FULL_GEOCHEMISTRY
  OUTPUT
    All
    TOTAL
  /
END

OUTPUT
    FORMAT HDF5
    VELOCITY_AT_CENTER
END

!:=========================== solver options ===================================
TIMESTEPPER TRANSPORT
  TS_ACCELERATION 8
/

!:=========================== discretization ===================================
GRID
  TYPE structured
  ORIGIN 0.d0 0.d0 0.d0
  NXYZ 100 1 1
  BOUNDS
    0.d0 0.d0 0.d0
    1.d0 1.d0 100.d0
  /
END

!:=========================== flow =============================================
UNIFORM_VELOCITY 7.9274479960d-9 0.d0 0.d0

!:=========================== fluid properties =================================
FLUID_PROPERTY 
  DIFFUSION_COEFFICIENT 1.d-9
/

!:=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  POROSITY 0.25d0
  PERMEABILITY 
      PERM_ISO 1.0d-12
  /
/

!:=========================== observation points ===============================
OBSERVATION
  REGION all
  AT_CELL_CENTER
/

!:=========================== output options ===================================
OUTPUT
  FORMAT HDF5
  PERIODIC TIME 1 y
/

!:=========================== times ============================================
TIME
  FINAL_TIME 50.d0 y
  INITIAL_TIMESTEP_SIZE 1.d-6 y
  MAXIMUM_TIMESTEP_SIZE 1.d-1 y
/

!:=========================== regions ==========================================
REGION all
  COORDINATES
    0.d0 0.d0 0.d0
    100.d0 1.d0 1.d0
  /
END

REGION west
  FACE WEST
  COORDINATES
    0.d0 0.d0 0.d0
    0.d0 1.d0 1.d0
  /
END

REGION east
  FACE EAST
  COORDINATES
    100.d0 0.d0 0.d0
    100.d0 1.d0 1.d0
  /
END

FLOW_CONDITION any
TYPE
FLUX neumann
/
FLUX 7.9274479960d-9
/

!:=========================== transport conditions =============================
TRANSPORT_CONDITION initial
  TYPE dirichlet
  CONSTRAINT_LIST
    0.d0 initial
  /
END

TRANSPORT_CONDITION west
  TYPE dirichlet
  CONSTRAINT_LIST
    0.d0 west
  /
END

TRANSPORT_CONDITION east
  TYPE dirichlet_zero_gradient
  CONSTRAINT_LIST
    0.d0 west
  /
END

!:=========================== constraints ======================================
CONSTRAINT initial
  CONCENTRATIONS
    Tracer  1.0e-20    T
  /
END

CONSTRAINT west
  CONCENTRATIONS
    Tracer  1.d-3      T
  /
END

!:=========================== condition couplers ===============================
!: initial condition
INITIAL_CONDITION initial0
  FLOW_CONDITION any
  TRANSPORT_CONDITION initial
  REGION all
END

!: west boundary condition
BOUNDARY_CONDITION west0
  FLOW_CONDITION any
  TRANSPORT_CONDITION west
  REGION west
END

!: east boundary condition
BOUNDARY_CONDITION east0
  FLOW_CONDITION any
  TRANSPORT_CONDITION east
  REGION east
END

!:=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL soil1
END

END_SUBSURFACE